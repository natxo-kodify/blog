{% extends 'KodifyBlogBundle::base.html.twig' %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="{{ path('view_post',{id: post.id}) }}">{{ post.title }}</a>
            <span class="pull-right">by: {{ post.author.name }} on: {{ post.createdAt|date("m/d/Y") }}</span>
        </div>
        <div class="panel-body">
            {{ post.content }}
        </div>
    </div>
    {% block comments %}
             {% if post.getComment|length > 0 %}
                   {% for comment in post.getComment %}
                      <div class="panel-comment panel-default">
                           <div class="panel-body">
                               {{ comment.content }}
                           </div>
                           <div class="comment-footer">
                               <span class="pull-right">commented by: {{ comment.author.name }} on: {{ comment.createdAt|date("m/d/Y") }}</span>
                           </div>
                      </div>
                   {% endfor %}
               {% else %}
                  <div class="panel-comment panel-default panel-body">There are no comments...</div>
            {% endif %}
    {% endblock %}
{% endblock %}

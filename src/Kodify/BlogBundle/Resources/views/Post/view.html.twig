{% extends 'KodifyBlogBundle::base.html.twig' %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="{{ path('view_post',{id: post.id}) }}">{{ post.title }}</a>
            <span class="pull-right">by: {{ post.author.name }} on: {{ post.createdAt|date("m/d/Y") }}</span>
        </div>
        <div class="panel-body">
            {{ post.content }}
        </div>
    </div>
    {% if comments|length %}
        {% if comments|length == 1 %}
            <p>There is 1 comment</p>
        {% else %}
            <p>There are {{ comments|length }} comments</p>
        {% endif %}
    {% else %}
        <p>There are no comments</p>
    {% endif %}
    {% for comment in comments %}
    	<div class="panel panel-default">
    		<div class="panel-heading">
    			Comment by {{ comment.author.name }}
                <span class="pull-right">{{ comment.createdAt|date("m/d/Y")}} at {{ comment.createdAt|date("h:m")}}</span>
    		</div>
    		<div class="panel-body">
				{{ comment.text }}
        	</div>
        </div>
    {% endfor %}
    <p>Create comment</p>
    {% block form %}
    {% include 'KodifyBlogBundle::Post/createComment.html.twig' %}
    {% endblock %}
{% endblock %}
{% extends 'KodifyBlogBundle::base.html.twig' %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="{{ path('view_post',{id: post.id}) }}">{{ post.title }}</a>
            <span class="pull-right">by: {{ post.author.name }} on: {{ post.createdAt|date("m/d/Y") }}</span>
        </div>
        <div class="panel-body">
            {{ post.content }}
        </div>
    </div>

    <a href="{{ path('comment_post',{'id': post.id}) }}">Create Comment</a>
    {% if comments %}
        {% include 'KodifyBlogBundle:Comment:List/index.html.twig' %}
    {% else %}
        {% include 'KodifyBlogBundle:Comment:List/empty.html.twig' %}
    {% endif %}
{% endblock %}
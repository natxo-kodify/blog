{% extends 'KodifyBlogBundle::base.html.twig' %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <div class="row">
                <div class="col-md-8">
                    <a href="{{ path('view_post',{id: post.id}) }}">{{ post.title }}</a>
                </div>
                <div class="col-md-4">
                    <span class="pull-right">by: {{ post.author.name }} on: {{ post.createdAt|date("m/d/Y") }}</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-1 col-xs-12">
                    {% if rating is null %}
                        No ratings
                    {% else %}
                        Rating: {{ rating|number_format }}
                    {% endif %}

                </div>
                <div class="col-md-11 col-xs-12">
                    {{ form_start(form,{'attr':{'class': 'form-inline'}}) }}
                        {{ form_errors(form.rating) }}
                        {{ form_widget(form.rating,{'attr':{'placeholder': 'From 0 to 5','class':'input-sm'}}) }}
                        {{ form_widget(form.rate) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="panel-body">
            {{ post.content }}
        </div>
    </div>
{% endblock %}

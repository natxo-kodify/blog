{% extends 'KodifyBlogBundle::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            {% if sort == 2 %}
            <a href="{{ url('sorted_home',{'sort': 1}) }}">Order by date</a>
            {% else %}
            <a href="{{ url('sorted_home',{'sort': 2}) }}">Order by rating</a>
            {% endif %}
        </div>
    </div>
    {% for post in posts %}
        <div class="col-md-6 col-xs-6">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                        <div class="row">
                        <div class="col-md-8">
                            <a href="{{ path('view_post',{id: post.id}) }}" class="postTitle">{{ post.title }}</a>
                        </div>
                        <div class="col-md-4">
                            <span>by: {{ post.author.name }} on: {{ post.createdAt|date("m/d/Y") }}</span>
                        </div>
                        </div>
                </div>
                <div class="panel-body">
                    {{ post.content }}
                </div>
            </div>
        </div>
    {% endfor %}
    <div class="clearfix"></div>

{% endblock %}

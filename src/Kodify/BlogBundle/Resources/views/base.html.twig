<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">
        <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
        {% block head_style %}
            {% stylesheets
            output='css/*.css' filter='cssrewrite'
            'bundles/kodifyblog/css/blog.css' %}
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen"/>
            {% endstylesheets %}
            <link href="//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.min.css" rel="stylesheet">
        {% endblock head_style %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% block menu %}
    {% include 'KodifyBlogBundle::Layout/menu.html.twig' %}
{% endblock %}
<div id="content" class="container">
    {% block breadcrumbs %}
        {% include 'KodifyBlogBundle::Layout/breadcrumbs.html.twig' %}
    {% endblock %}
    {% for flashMessage in app.session.flashbag.get('info') %}
        <div class="bg-primary">{{ flashMessage | raw  }}</div>
    {% endfor %}
    {% block content %}{% endblock %}
</div>
{% block javascripts %}
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
{% endblock %}
</body>
</html>












